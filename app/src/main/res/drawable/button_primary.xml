<?xml version="1.0" encoding="utf-8"?>
<!-- Luxury Gold Primary Button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - Brilliant glow -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow -->
            <item
                android:left="-2dp"
                android:top="-2dp"
                android:right="-2dp"
                android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40D4A855" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            <!-- Main button -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#E8C47C"
                        android:endColor="#D4A855" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed state - Deeper gold -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#A68B4B"
                android:endColor="#8B7340" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state - Elegant gold gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#D4A855"
                android:endColor="#A68B4B" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>