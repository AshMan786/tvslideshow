<?xml version="1.0" encoding="utf-8"?>
<!-- Glass Morphism Secondary Button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - Golden glow border -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow -->
            <item
                android:left="-1dp"
                android:top="-1dp"
                android:right="-1dp"
                android:bottom="-1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#25D4A855" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Main button -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#25FFFFFF" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/accent_gold" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#30FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/accent_gold_muted" />
        </shape>
    </item>

    <!-- Default state - Subtle glass effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
</selector>