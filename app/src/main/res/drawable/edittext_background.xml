<?xml version="1.0" encoding="utf-8"?>
<!-- Elegant Input Field -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - Golden accent -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow -->
            <item
                android:left="-1dp"
                android:top="-1dp"
                android:right="-1dp"
                android:bottom="-1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#15D4A855" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Main field -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/accent_gold" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
        </shape>
    </item>
</selector>