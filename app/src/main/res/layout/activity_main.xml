<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="32dp"
        android:gravity="center_vertical">

        <!-- Left side - Branding (smaller) -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="24dp">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/splash_icon"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:gravity="center" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4FC3F7"
                android:gravity="center"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- Right side - Settings Cards (takes remaining space) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="24dp">

            <!-- Folder Selection Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/folder_path_label"
                    android:textSize="14sp"
                    android:textColor="#80FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/folder_path_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No folder selected"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/browse_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/browse_folder"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_secondary"
                    android:paddingVertical="12dp"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Delay Setting Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delay_label"
                    android:textSize="14sp"
                    android:textColor="#80FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

                <EditText
                    android:id="@+id/delay_edit"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="5"
                    android:inputType="number"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#60FFFFFF"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

            <!-- Subfolders Option -->
            <CheckBox
                android:id="@+id/subfolders_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/include_subfolders"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:buttonTint="#4FC3F7"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:focusable="true" />

            <!-- Start Button -->
            <Button
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_slideshow"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/button_primary"
                android:paddingVertical="16dp"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
